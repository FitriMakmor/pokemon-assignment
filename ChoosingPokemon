    public void check(int i,int j,PokemonTeam a,PokemonTeam b){
        int x=i-1;
        while(x>=0)
        {
            if (choose.equals(a.pokemon[x])){
                x=i-1;
                System.out.print("Please choose pokemon:");
                choose=s.nextLine();
            }
            else
            {
                x=x-1;
            }
        }
        
        int y=i-1;
        while(y>=0)
            {
                if (choose.equals(b.pokemon[y])){
                    y=i-1;
                    System.out.print("Your opponent chose pokemon:");
                    choose=s.nextLine();
                }
                else
                {
                    y=y-1;
                }
            }
    }
